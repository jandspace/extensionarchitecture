        .contact {
          max-width: 820px;
          margin: 0 auto;
          padding: 1% 0;
          text-align: center;

          h4 {
            color: #202020;
            text-transform: none;
            margin-bottom: 1.5em;
          }

          a.btn {
            margin: 3px;
          }
        }
      }
    }
  }
}
